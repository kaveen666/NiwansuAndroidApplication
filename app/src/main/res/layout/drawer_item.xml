<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="wrap_content">


<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="25dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
 >
  <LinearLayout

      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="10dp"

>
    <TextView
        android:id="@+id/appointmentNo"
        android:background="@drawable/round_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Appointment No : "
        android:gravity="center"
        android:padding="5dp"
        android:textSize="14sp"
        android:textStyle="bold"

        />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="left"
        android:layout_marginTop="2dp"
        android:textColor="@color/black"
        android:layout_alignParentLeft="true"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="14sp"
        android:text="Date" />
    <TextView
        android:id="@+id/doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Doctor"
        android:padding="5dp"
        android:layout_below="@+id/Date"
        android:textColor="@color/black"
        android:gravity="left"
        android:textSize="13sp"/>

  <TextView
      android:id="@+id/time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/Date"
      android:layout_alignParentEnd="true"
      android:layout_gravity="left"
      android:layout_marginTop="-27dp"
      android:layout_marginEnd="4dp"
      android:gravity="right"
      android:padding="5dp"
      android:text="Time"
      android:textColor="@color/black"
      android:textSize="13sp" />
    <Spinner
        android:id="@+id/spin_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Date"
        android:layout_alignParentEnd="true"
        android:layout_gravity="left"
        android:layout_marginTop="-27dp"
        android:layout_marginEnd="4dp"
        android:gravity="right"
        android:entries="@array/user_catergory"
        android:padding="5dp"
        android:text="Time"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doctor"
        android:layout_gravity="center"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="Status"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        android:textSize="13sp" />


</RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:text="Accept"/>
        <Button
            android:id="@+id/btn_reject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:text="Reject"/>
        <Button
            android:id="@+id/btn_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Start Call"/>
        <Button
            android:id="@+id/btn_video_patient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Start patient Call"/>

    </RelativeLayout>
  </LinearLayout>
</androidx.cardview.widget.CardView>

    <View
        android:background="#bfbfbf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />



</LinearLayout>