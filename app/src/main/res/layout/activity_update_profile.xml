<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.patient.activities.UpdateProfileActivity">

    <RelativeLayout
        android:id="@+id/rL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="130dp">


        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="TODO"
            android:src="@drawable/icon_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/done"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/icon_done_tick"
            android:layout_alignParentRight="true"

            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rL2"
        android:layout_below="@id/rL1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <RelativeLayout
            android:id="@+id/rL4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"

           >


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/proPic1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon_image_upload"
                />

            <TextView
                android:id="@+id/txt_tname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/proPic1"
                android:layout_marginTop="15dp"
                android:text="Dr Name"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rL4"

            >

            <TextView
                android:id="@+id/txtProfileDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="50dp"
                android:text="Profile Details"
                android:textSize="16sp"
                android:textStyle="bold"
               />

            <EditText
                android:id="@+id/txt_fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:textSize="14sp"
                android:layout_below="@+id/txtProfileDetails"
                android:hint="First Name" />

            <EditText
                android:id="@+id/txt_lname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_fname"
                android:textSize="14sp"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="10dp"
                android:hint="Last Name" />




            <EditText
                android:id="@+id/txt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_lname"
                android:textSize="14sp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:hint="Email" />





            <EditText
                android:id="@+id/txt_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_email"
                android:textSize="14sp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:hint="Contact Number" />





            <EditText
                android:id="@+id/txt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_contact"
             android:layout_marginHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:textSize="14sp"
                android:hint="Password"
                android:inputType="textPassword" />



        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>